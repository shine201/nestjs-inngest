# Application Configuration
NODE_ENV=development
PORT=3000

# Inngest Configuration
# Get these values from your Inngest dashboard
INNGEST_APP_ID=basic-example-app
INNGEST_SIGNING_KEY=your-signing-key-here
INNGEST_EVENT_KEY=your-event-key-here

# Optional Inngest Settings
INNGEST_TIMEOUT=30000
INNGEST_MAX_RETRIES=3
INNGEST_MAX_BATCH_SIZE=100

# Email Configuration (Optional - uses console logging by default)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
SMTP_SECURE=false

# Database Configuration (Optional - uses in-memory storage by default)
DATABASE_URL=postgres://localhost:5432/basic_example
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=basic_example
DATABASE_USER=postgres
DATABASE_PASS=postgres

# Analytics Configuration (Optional)
ANALYTICS_PROVIDER=custom
ANALYTICS_API_KEY=your-analytics-api-key
ANALYTICS_BATCH_SIZE=100

# Security Configuration
JWT_SECRET=your-jwt-secret-key
BCRYPT_ROUNDS=10

# External Services (Optional)
REDIS_URL=redis://localhost:6379
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key